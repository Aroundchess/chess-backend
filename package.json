{
  "name": "chess-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend-only service for a chess application (MVP).",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "db:up": "docker compose -f docker/docker-compose.yml up -d mongo",
    "db:down": "docker compose -f docker/docker-compose.yml down",
    "db:logs": "docker compose -f docker/docker-compose.yml logs -f mongo",
    "db:ps": "docker compose -f docker/docker-compose.yml ps"
  },
  "keywords": [
    "chess",
    "backend",
    "express",
    "api"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "chess.js": "0.13.4",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.8.0"
  }
}
